{
  "name": "jgg11ty",
  "version": "1.2.0",
  "description": "Joel Goodman's personal blog.",
  "main": "index.js",
  "scripts": {
    "sass": "sass _includes/assets/scss:_includes/assets/css",
    "postcss": "postcss _site/assets/css/*.css --no-map --replace",
    "build:sass": "npm-run-all --sequential sass postcss",
    "watch:sass": "sass --watch _includes/assets/scss:_site/assets/css",
    "build:js": "rollup -c",
    "watch:js": "rollup -c --watch",
    "build:eleventy": "eleventy",
    "watch:eleventy": "ELEVENTY_ENV=development eleventy --serve",
    "start": "cross-env NODE_ENV=development npm-run-all build:sass --sequential build:js --parallel watch:*",
    "debug:start": "DEBUG=Eleventy* npm start",
    "build": "cross-env NODE_ENV=production npm-run-all build:sass build:js --parallel build:eleventy",
    "debug:build": "DEBUG=Eleventy* npm run build"
  },
  "keywords": [
    "blog",
    "eleventy"
  ],
  "author": "Joel G Goodman",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@ampproject/eleventy-plugin-amp": "^0.2.2",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "autoprefixer": "^10.2.5",
    "clean-css": "^4.2.3",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "eleventy-plugin-blog-tools": "^0.3.1",
    "eleventy-plugin-embed-everything": "^1.13.1",
    "eleventy-plugin-reading-time": "^0.0.1",
    "html-minifier": "^4.0.0",
    "luxon": "^1.26.0",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^7.1.0",
    "markdown-it-container": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.0.3",
    "rollup": "^2.42.4",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.8",
    "terser": "^5.6.1",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "node-mailjet": "^3.0.5"
  }
}
